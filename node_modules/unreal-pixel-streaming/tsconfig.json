{
  "compilerOptions": {
    "outDir": "./types",
    "noImplicitAny": true,
    "module": "es6",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "declaration": true
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "./src/*.ts",
  ],
  "typedocOptions": {
    "exclude":"src/index.*",
    "entryPoints": [
      "src/"
    ],
    "sort": [
      "enum-value-ascending",
      "required-first",
      "source-order"
    ],
    "out": "docs",
    "theme": "default",
    "hideGenerator": "true"

  }
}