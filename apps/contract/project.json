{
  "name": "contract",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/contract/src",
  "projectType": "application",
  "targets": {
    "compile": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "apps/contract",
        "command": "npx hardhat compile"
      }
    },
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/contract",
        "main": "apps/contract/src/main.ts",
        "tsConfig": "apps/contract/tsconfig.app.json",
        "assets": ["apps/contract/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/contract/src/environments/environment.ts",
              "with": "apps/contract/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "contract:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "contract:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/contract/**/*.ts"]
      }
    }
  },
  "tags": []
}
